<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_large"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_infoPelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_medium"
                        android:text="Pelanggan : "
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_pelanggan"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_medium"
                        android:layout_marginLeft="@dimen/spacing_medium"
                        android:text="Fauzi Ghozali"
                        android:layout_toRightOf="@+id/tv_infoPelanggan"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rl_one">

                    <TextView
                        android:id="@+id/tv_infoMeja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meja : "
                        android:layout_marginLeft="@dimen/spacing_mlarge"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_meja"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_toRightOf="@+id/tv_infoMeja"
                        android:textColor="@color/black"/>

                    </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_infoDriver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Driver : "
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tv_driver"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:text="Fauzi Ghozali"
                            android:layout_toRightOf="@+id/tv_infoDriver"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_infoPemesan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pemesan : "
                            android:layout_marginLeft="@dimen/spacing_mlarge"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tv_pemesan"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Fauzi Ghozali"
                            android:layout_toRightOf="@+id/tv_infoPemesan"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. "
                    android:layout_toLeftOf="@+id/tv_total"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="200000"
                    android:layout_marginRight="@dimen/spacing_xxlarge"
                    android:layout_toLeftOf="@+id/tv_jam"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:21"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View style="@style/DividerRow"/>

</LinearLayout>